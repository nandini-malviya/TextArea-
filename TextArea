import java.awt.*;  
public class TextAreaExample  
{  
     TextAreaExample(){  
        Frame f= new Frame();  
            TextArea area=new TextArea("Welcome to advanced java");  
        area.setBounds(100,200,200,300);  
        f.add(area);  
        f.setSize(800,800);  
        f.setLayout(null);  
        f.setVisible(true);  
     }  
public static void main(String args[])  
{  
   new TextAreaExample();  
}  
}  
